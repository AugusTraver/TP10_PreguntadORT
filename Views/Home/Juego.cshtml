@{
    ViewData["Title"] = "Juego";
}

<div id="juego">
    <p>Nombre de usuario: @ViewBag.Username</p>
    <p>Puntaje actual: @ViewBag.PuntajeActual</p>
    <br />
    <img src="@ViewBag.Foto" alt="Foto de la pregunta" />
    <br />
    <p>NÃºmero de pregunta: @ViewBag.PreguntaActual.Id</p>
    <p>@ViewBag.PreguntaActual.Enunciado</p>

    <form id="formRespuestas" method="post" action="@Url.Action("VerificarRespuesta", "Home")">
        @foreach (var respuesta in ViewBag.ListaRespuestas)
        {
            <div id="opcion_@respuesta.Id" data-correcta="@respuesta.Correcta.ToString().ToLower()">
                <input type="radio" name="idRespuesta" value="@respuesta.Id" id="radio_@respuesta.Id" />
                <label id="label_@respuesta.Id" for="radio_@respuesta.Id">@respuesta.Contenido</label>
            </div>
        }

        <br />
        <button type="button" id="btnEnviar" onclick="verificar()">Enviar respuesta</button>

        <button type="submit" id="btnSiguiente" style="display:none;">Siguiente pregunta</button>
    </form>
</div>
